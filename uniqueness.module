define('UNIQUENESS_SEARCH_MODE_DRUPAL', 0x02);
define('UNIQUENESS_SEARCH_MODE_SOLR', 0x03);

define('UNIQUENESS_ADD_NODE', 0x01);
define('UNIQUENESS_EDIT_NODE', 0x02);

